def find_this(expression):
    if isinstance(expression, AST_Dot):
        return expression.expression
    if not isinstance(expression, AST_SymbolRef):
        return expression

def print_this(expression, output):
    obj = find_this(expression)
    if obj:
        obj.print(output)
    else:
        output.print('this')

